doi = {10.1016/j.icarus.2015.03.010},
issn = {00191035},
journal = {Icarus},
keywords = {Atmospheres,Titan,atmosphere,dynamics,structure},
month = {jul},
pages = {122--134},
publisher = {Elsevier Inc.},
title = {{Microphysical modeling of Titan's detached haze layer in a 3D GCM}},
url = {http://dx.doi.org/10.1016/j.icarus.2015.03.010 http://linkinghub.elsevier.com/retrieve/pii/S0019103515001104},
volume = {254},
