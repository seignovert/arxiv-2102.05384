arxivId = {1712.04486},
author = {Rannou, Pascal and Seignovert, Beno{\^{i}}t and Mou{\'{e}}lic, St{\'{e}}phane Le and Maltagliati, Lucas and Rey, Micheal and Sotin, Christophe},
